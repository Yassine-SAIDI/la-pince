generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_NON_POOLING")
}

model UserSettings {
  userId String @id 
  currency String
}

model Category {
  userId String
  name String
  createdAt DateTime @default(now())
  icon String
  type String @default("expense")

  @@unique([name, userId, type])
}

model Transaction {
  id String @id @default(uuid())
  userId String
  amount Float
  description String?
  category String
  categoryIcon String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  date DateTime
  type String @default("expense")

  @@unique([id, userId])
}

model MonthHistory {
  userId String
  day Int
  month Int
  year Int
  income Float
  expense Float

  @@unique([userId, day, month, year])
}

model YearHistory {
  userId String
  month Int
  year Int
  income Float
  expense Float

  @@unique([userId, month, year])
}