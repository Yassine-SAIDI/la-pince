// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model UserSettings {
  userId    String   @id
  currency  String   @default("EUR")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_settings")
}

model Category {
  userId    String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  icon      String
  type      String   @default("expense")

  // Relations
  transactions Transaction[]

  @@unique([name, userId, type])
  @@map("categories")
}

model Transaction {
  id           String   @id @default(uuid())
  userId       String
  amount       Decimal  @db.Decimal(12, 2) // Utiliser Decimal pour la précision monétaire
  description  String?
  category     String
  categoryIcon String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  date         DateTime
  type         String   @default("expense")

  // Relations
  categoryRef Category? @relation(fields: [category, userId, type], references: [name, userId, type])

  @@unique([id, userId])
  @@index([userId, date])
  @@index([userId, type])
  @@index([userId, category])
  @@map("transactions")
}

model MonthHistory {
  userId  String
  day     Int
  month   Int
  year    Int
  income  Decimal @db.Decimal(12, 2)
  expense Decimal @db.Decimal(12, 2)

  @@unique([userId, day, month, year])
  @@index([userId, year, month])
  @@map("month_history")
}

model YearHistory {
  userId  String
  month   Int
  year    Int
  income  Decimal @db.Decimal(12, 2)
  expense Decimal @db.Decimal(12, 2)

  @@unique([userId, month, year])
  @@index([userId, year])
  @@map("year_history")
}
